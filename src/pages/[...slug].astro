---
import { CollectionEntry, getCollection } from "astro:content";
import NewsletterLayout from "../layouts/Newsletter.astro";

export async function getStaticPaths() {
  const newsletterEntries = await getCollection(
    "newsletter",
    ({ data }) => data.draft === false
  );

  return newsletterEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: entry,
  }));
}

type Props = CollectionEntry<"newsletter">;

const entry = Astro.props;
const { Content } = await entry.render();
---

<NewsletterLayout {...entry}>
  <Content />
</NewsletterLayout>
