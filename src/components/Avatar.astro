---
import { Image } from "@astrojs/image/components";
import type { CropPosition } from "@astrojs/image/dist/loaders";

export interface Props {
  src: string;
  alt: string;
  position: CropPosition | undefined;
}

const { src, alt, position } = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={100}
  height={100}
  position={position}
  class="rounded-full border border-white"
/>
