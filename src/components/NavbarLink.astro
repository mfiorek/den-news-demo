---
export interface Props {
  href: string;
  text: string;
  customClass?: string;
}

const { href, text, customClass } = Astro.props;
---

{
  Astro.url.pathname === href ? (
    <p class={`select-none rounded bg-slate-600 px-4 py-1 ${customClass}`}>
      {text}
    </p>
  ) : (
    <a
      href={href}
      class={`select-none rounded px-4 py-1 hover:bg-slate-400 hover:bg-opacity-20 ${customClass}`}
    >
      {text}
    </a>
  )
}
